<!DOCTYPE html>
<html>

	<head>
		<title>修改商品</title>
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
		<link rel="stylesheet" href="/stylesheets/addgoods.css" />
		<script src="/js/vue.js"></script>
		<script src="/js/vue-resource.min.js" type="text/javascript"></script>
		<script src="/js/jquery-2.2.4.min.js"></script>
		<script>
			//testJson = $.parseJSON(testJson);
			window.onload = function() { //页面加载完会执行的操作
				$.ajax({
					type: "get",
					url: "/goods/getlabel",
					async: true,
					dataType: 'json',
					success: function(res) {
						if(res.length < 1) {
							return;
						} else {
							var opts1 = "";
							var opts2 = "";
							var opts3 = "";
							var opts4 = "";
							var opts5 = "";
							//颜色下拉表
							for(var i = 0; i < res.length; i++) {
								if(res[i].upid == 1) {
									
									opts1 += "<option value=" + res[i].content + ">" + res[i].content + "</option>";
								}
								if(res[i].upid == 2) {
									opts2 += "<option value=" + res[i].content + ">" + res[i].content + "</option>";
								}
								if(res[i].upid == 3) {
									opts3 += "<option value=" + res[i].content + ">" + res[i].content + "</option>";
								}
								if(res[i].upid == 4) {
									opts4 += "<option value=" + res[i].content + ">" + res[i].content + "</option>";
								}
								if(res[i].upid == 5) {
									opts5 += "<option value=" + res[i].content + ">" + res[i].content + "</option>";
								}
							}
							$(opts1).appendTo("#c");
							$(opts2).appendTo("#pin");
							$(opts3).appendTo("#cpu");
							$(opts4).appendTo("#xian");
							$(opts5).appendTo("#size");
//							alert("bb:"+vue.color);
							$("#c").val(vue.color);
							$("#pin").val(vue.pin);
							$("#cpu").val(vue.cpu);
							$("#xian").val(vue.xian);
							$("#size").val(vue.size);
						}
					},
					error: function(err) {
						alert("错误：" + err);
					}
				});
			}
			
		</script>
	</head>

	<body style="background-color: #ECF0F5;">

		<div id="main">
			<h3>修改商品</h3>
			<div id="d1">
				<form id="f1"  onsubmit="return vue.checkeds()" action="/goods/updategoodsa" method="post">
					<input name="id" hidden="true" v-model="id"/>
					商品名称: <input v-model="name" name="name"/><br /><br /> 商品价格: 
					<input v-model="price" name="price" /><br /><br /> 
					商品数量: <input v-model="num" name="num" /><br /><br /> 
					商品描述: <input v-model="detail" name="detail" /><br /><br /> 
					生产厂家: <input v-model="produce" name="produce" /><br /><br /> 
					商品主图: <input v-model="pics" name="pics" /><br /><br /> 商品属性:颜色：
					<select id="c" name="color" class="color"></select>&nbsp&nbsp 品牌：
					<select id="pin" name="pin" class="pin"></select><br/><br/> 笔记本cpu:
					<select id="cpu" name="cpu" class="cpu"></select>&nbsp&nbsp 显卡类型：
					<select id="xian" name="xian" class="xian"></select><br/><br/> 尺寸：
					<select id="size" name="size" class="size"></select><br/><br/>
					<input type="submit" value="提交" />
			</div>
			</form>
		</div>

		<script>
			var ischange = false;
			var id = <%=id%>;
			var vue = new Vue({
				el: "#main",
				data: {
					id:id,
					name:"",
					price:"",
					num:"",
					detail:"",
					produce:"",
					pics:"",
					color:"",
					pin:"",
					cpu:"",
					xian:"",
					size:""
				},
				http: {
					headers: {
						'Content-Type': 'application/x-www-form-urlencoded'
					} //1.post请求需设置请求头
				},
				methods: {
					change:function(){
						 $(":input").change(function(){
			   		ischange = true;
			   });
						$(".color").change(function() {
							ischange = true;
						});
						$(".pin").change(function() {
							ischange = true;
						});
						$(".cpu").change(function(){
						ischange=true;
					});
					$(".xian").change(function(){
						ischange=true;
					});
					$(".size").change(function(){
						ischange=true;
					});
					},
				checkeds:function(){
						if(!ischange) {
							alert("不好意思，您还没有做任何修改。" );
							return false;
						} else {
							alert("您确定要修改吗？");
							return true;
			       }
					},
					getitem: function() {
						var ob = this; //当前对象
						Vue.http.options.emulateJSON = true; //2.post请求设置
						Vue.http.post('/goods/selectgood', {
							id: id
						}).then(function(res) {
							//请求成功
							var aa = JSON.parse(res.data);
							var r = aa.v1;
							var label = aa.v2;//标签内容
							aa = JSON.parse(label[0].label_con);
//							alert("aa:"+aa.color);
							ob.color=aa.color;
							ob.pin=aa.pin;
							ob.cpu=aa.cpu;
							ob.xian=aa.xian;
							ob.size=aa.size;
							$("#c").val(aa.color);
							$("#pin").val(aa.pin);
							$("#cpu").val(aa.cpu);
							$("#xian").val(aa.xian);
							$("#size").val(aa.size);
							ob.id=r[0].id;
							ob.name = r[0].g_name;
							ob.price = r[0].g_price;
							ob.num = r[0].g_num;
							ob.detail = r[0].g_detail;
							ob.produce = r[0].g_product;
							ob.change();
						}, function(err) {
							//请求失败
							alert("err:" + err);
							throw err;
						});
					}
				}
			});
			vue.getitem();
			  
		</script>
	</body>

</html>