<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>网站后台博客信息管理 | AdminLTE 2</title>
    <script src="/js/vue.js" type="text/javascript"></script>
		<script src="/js/vue-resource.min.js" type="text/javascript"></script>
		<script src="/js/jquery-2.2.4.min.js" type="text/javascript"></script>
		<link rel="stylesheet" href="/stylesheets/show.css" />
		<link rel="stylesheet" href="/stylesheets/addgoods.css" />
    <!-- Tell the browser to be responsive to screen width -->
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.4 -->
    <link href="/admin/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="/admin/bootstrap/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

    <link href="/admin/bootstrap/css/ionicons.min.css" rel="stylesheet" type="text/css" />    

    <link href="/admin/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
  
    <link href="/admin/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
  
  </head>
  <body class="skin-blue sidebar-mini">
    <div class="wrapper">
      
      <% include ../layout/header.ejs %>
      
      <% include ../layout/menu.ejs %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
       

        <!-- Main content -->
        <section class="content">
          <div id="main">
			<h2> 商品信息管理</h2>
			<table id="t1">
				<thead>
					<tr>
						<th>商品编号</th>
						<th>商品名称</th>
						<th>价格</th>
						<th>数量</th>
						<th>商品详情</th>
						<th>商品颜色</th>
						<th>商品品牌</th>
						<th>计算机cpu</th>
						<th>显卡类型</th>
						<th>电脑尺寸</th>
						<th>点赞量</th>
						<th>生产地</th>
						<th>商品状态</th>
					
						<th>操作</th>
					</tr>
				</thead>
				<tbody>
					<tr v-for="res in result">
						<td>{{res.hao}}</td>
						<td>{{res.g_name}}</td>
						<td>{{res.g_price}}</td>
						<td>{{res.g_num}}</td>
						<td>{{res.g_detail}}</td>
						<td>{{res.color}}</td>
						<td>{{res.pin}}</td>
						<td>{{res.cpu}}</td>
						<td>&nbsp;&nbsp;&nbsp;{{res.xian}}&nbsp;&nbsp;&nbsp;</td>
						<td>{{res.size}}</td>
						<td>{{res.g_looknum}}</td>
						<td>{{res.g_product}}</td>
						<td>{{res.g_state}}</td>
					<!--	<td>{{res.g_time}}</td>-->
						<td>
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;	<a :href="'/goods/stateup?g='+res.id">发布</a>&nbsp;&nbsp;&nbsp;
							<a :href="'/goods/statedown?g='+res.id">下线</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						</td>
					</tr>
				</tbody>
			</table>
		
		
 </div>
         
        </section><!-- /.content -->
        
      </div><!-- /.content-wrapper -->
      
      <% include ../layout/footer.ejs %>
      
      
      <!-- Add the sidebar's background. This div must be placed
           immediately after the control sidebar -->
      <div class='control-sidebar-bg'></div>
    </div><!-- ./wrapper -->
    
    <!-- jQuery 2.1.4 -->
    <script src="/admin/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="/admin/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>    
    
    <!-- Slimscroll -->
    <script src="/admin/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src='/admin/plugins/fastclick/fastclick.min.js'></script>
    <!-- AdminLTE App -->
    <script src="/admin/dist/js/app.min.js" type="text/javascript"></script>    

    <!-- AdminLTE 用于演示目的 -->
    <script src="/admin/dist/js/demo.js" type="text/javascript"></script>
<script>
			var vue = new Vue({
				el: "#main",
				data: {
					result: [],
				},
				http: {
   headers: {'Content-Type': 'application/x-www-form-urlencoded'}   //1.post请求需设置请求头
},
				methods: {
				
					onloading: function() {
						var ob = this; //当前对象
						Vue.http.get('/goods/queryg').then(function(res) {
							//请求成功
							var aa = JSON.parse(res.data);
							var r = aa.v1;
							var label = aa.v2;
							for(var i = 0; i < r.length; i++) {
								r[i].hao = (i + 1); //设置序列号
							/*	var time = r[i].g_time;
								r[i].g_time = time.replace("T", " ");
								r[i].g_time = r[i].g_time.replace(".000Z", "");*/
								if(r[i].g_state==0){
									r[i].g_state="保存"
								}else if(r[i].g_state==1){
									r[i].g_state="发布"
								}else if(r[i].g_state==-1){
									r[i].g_state="下线"
								}
								//整理标签信息
								for(var j = 0; j < label.length; j++) {
									if(label[j].g_id == r[i].id) {
										aa = JSON.parse(label[j].label_con);
										r[i].color = aa.color;
										r[i].pin = aa.pin;
										r[i].cpu = aa.cpu;
										r[i].xian = aa.xian;
										r[i].size = aa.size;
									}
								}
							}
							ob.result = r;
						}, function(err) {
							//请求失败
							alert("err:" + err);
							throw err;
						});
					}
				}
			});
			window.onload = function() {
					vue.onloading();
				}
		</script>
  </body>
</html>